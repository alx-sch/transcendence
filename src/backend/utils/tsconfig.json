{
  "compilerOptions": {
    "rootDir": "./src", // Look for code here
    "outDir": "./dist", // Save compiled JS here
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true, // Generate .d.ts files (Crucial for autocomplete!)
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
