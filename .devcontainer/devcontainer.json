{
  "name": "GRIT -- the event social network webapp",

  // Debian OS with Node.js 20 and TypeScript
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bookworm",

  "features": {
    // Docker inside the dev container
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint", // ESLint
        "esbenp.prettier-vscode", // Prettier
        "bradlc.vscode-tailwindcss", // Tailwind CSS
        "ms-azuretools.vscode-docker", // Docker
        "matthewpi.caddyfile-support", // Caddyfile
        "jeff-hykin.better-dockerfile-syntax", // Dockerfile syntax
        "dsznajder.es7-react-js-snippets", // React snippets
        "johnpapa.vscode-zustand-snippets", // Zustand snippets
        "humao.rest-client" // REST cliet: Execute HTTP requests directly in vscode (backend/test/routes.http)
      ]
    }
  },

  // Ports to forward: backend (3000), frontend(8080), vite (5173)
  "forwardPorts": [3000, 5173, 8080]
}
